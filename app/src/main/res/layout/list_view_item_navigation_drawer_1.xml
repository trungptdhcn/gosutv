<com.balysv.materialripple.MaterialRippleLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_background_empty"
        app:rippleOverlay="true">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

        <com.icom.gosutv.ui.customview.FontelloTextView
                android:id="@+id/icon"
                style="@style/TextViewAppearance.Title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="18dp"
                android:textColor="@drawable/selector_text_empty"/>

        <com.icom.gosutv.ui.customview.RobotoTextView
                android:id="@+id/title"
                style="@style/TextViewAppearance.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:textColor="@drawable/selector_text_empty"
                app:typeface="robotoBold"/>
    </LinearLayout>

</com.balysv.materialripple.MaterialRippleLayout>