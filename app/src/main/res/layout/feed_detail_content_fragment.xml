<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res"
                xmlns:wheel="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
        >
    <RelativeLayout
            android:id="@+id/feed_detail_content_fragment_rlContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <WebView
                android:id="@+id/feed_detail_fragment_tvDes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_transparent"
                android:gravity="left"
                android:layout_centerVertical="true"
                android:textColor="@color/material_blue_grey_700"
                android:textSize="@dimen/text_size_small"
                android:layout_below="@+id/feed_detail_content_fragment_rlActionbar"
                android:visibility="gone"/>
        <RelativeLayout
                android:id="@+id/video_container"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@android:color/black"
                android:gravity="center_horizontal|center_vertical"
                android:layout_below="@+id/feed_detail_fragment_tvTitle">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <FrameLayout
                        android:id="@+id/videoSurfaceContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true">
                    <SurfaceView
                            android:id="@+id/videoSurface"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </FrameLayout>
                <ImageView
                        android:id="@+id/feed_detail_content_fragment_ivThumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"/>
                <ImageView
                        android:id="@+id/feed_detail_content_fragment_ivPlayer"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        android:src="@drawable/play_thumbnail"/>
                <ProgressBar
                        android:id="@+id/feed_detail_content_fragment_ivProgressBar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        android:src="@drawable/play_thumbnail"/>
            </RelativeLayout>
            <com.google.android.youtube.player.YouTubePlayerView
                    android:id="@+id/feed_detail_content_fragment_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    />
            <RelativeLayout
                    android:id="@+id/feed_detail_content_fragment_rlGallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    >
                <android.support.v4.view.ViewPager
                        android:id="@+id/feed_detail_content_fragment_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/arrow_right"
                        android:alpha="0.5"
                        />
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/arrow_left"
                        android:alpha="0.5"
                        />
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
                android:id="@+id/feed_detail_content_fragment_llRelated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/video_container"
                android:visibility="gone"
                android:orientation="vertical">
            <ListView
                    android:id="@+id/feed_detail_content_fragment_lvRelated"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    />
        </LinearLayout>
        <RelativeLayout
                android:id="@+id/feed_detail_content_fragment_rlActionbar"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:minHeight="@dimen/spacing_big_size"
                android:layout_alignParentTop="true"
                android:background="@color/main_color_500"
                >
            <ImageView
                    android:id="@+id/feed_detail_content_fragment_ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/spacing_normal"
                    android:src="@drawable/bt_back"
                    />
        </RelativeLayout>
    </RelativeLayout>
    <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/feed_detail_content_fragment_progress_bar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            wheel:matProg_barColor="@color/main_color_500"
            wheel:matProg_progressIndeterminate="true"
            />
</RelativeLayout>