<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
            android:id="@+id/list_item_card_big_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/cardMarginHorizontal"
            android:layout_marginRight="@dimen/cardMarginHorizontal"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:minHeight="300dp"
                android:orientation="vertical"
                >
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_weight="1"
                    android:minHeight="190dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView
                            android:id="@+id/list_item_google_cards_travel_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/cd_main_image"
                            android:scaleType="centerCrop"/>
                    <ImageView
                            android:id="@+id/list_item_google_cards_travel_ivThumbnail"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/play_thumbnail"
                            android:visibility="gone"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_mini"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="@dimen/spacing_mini"
                        android:paddingRight="@dimen/spacing_mini"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:background="@color/black_transparent">
                    <TextView
                            android:id="@+id/list_item_google_cards_travel_tvAuthor"
                            style="@style/TextContentStyle"
                            android:gravity="left|center_vertical"
                            android:maxLines="3"
                            android:text="Trungpt"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold"
                            android:drawableLeft="@drawable/pencil"
                            android:drawablePadding="3dp"
                            />
                    <TextView
                            android:id="@+id/list_item_google_cards_travel_tvView"
                            style="@style/TextContentStyle"
                            android:gravity="left|center_vertical"
                            android:maxLines="3"
                            android:text="12"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_small"
                            android:layout_toRightOf="@+id/list_item_google_cards_travel_tvAuthor"
                            android:layout_marginLeft="@dimen/spacing_small"
                            android:drawableLeft="@drawable/eye"
                            android:drawablePadding="3dp"
                            />
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="left|center_vertical"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/list_item_google_cards_travel_tvTitle"
                        style="@style/TextTitleStyle"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:layout_marginLeft="@dimen/spacing_small"
                        android:layout_marginRight="@dimen/spacing_normal"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_smaller"
                        android:textStyle="normal"
                        />
                <TextView
                        android:id="@+id/list_item_google_cards_travel_tvSapo"
                        style="@style/TextContentStyle"
                        android:layout_marginBottom="@dimen/spacing_mini"
                        android:layout_marginLeft="@dimen/spacing_small"
                        android:layout_marginRight="@dimen/spacing_normal"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:gravity="left"
                        android:maxLines="3"
                        android:text="@string/lorem_ipsum_long"
                        android:textColor="@color/material_blue_grey_700"
                        android:textSize="14sp"
                        android:visibility="gone"
                        />
