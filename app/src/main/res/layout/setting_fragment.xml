<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_91"
        android:orientation="vertical"
        >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"
            >
        <TextView
                android:text="LỌC TIN"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/text_size_smaller"
                android:textStyle="bold"
                android:textColor="#4baac8"
                android:typeface="normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_small"/>
        <ImageView
                style="@style/LineHorizontal"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="#4baac8"
                />
    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="4.3">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <TextView
                    style="@style/TextStyleSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lọc tin cho Trang chủ"
                    android:textSize="@dimen/text_size_small"
                    android:typeface="serif"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/spacing_small"/>
            <com.icom.gosutv.ui.customview.SettingsToggle
                    xmlns:widget="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/setting_screen_toggleButtonSetup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    widget:prefName="setupFilter"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/setting_fragment_rlFilterDota"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/spacing_mini"
                android:clickable="false">
            <TextView
                    style="@style/TextStyleSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dota"
                    android:textSize="@dimen/text_size_small"
                    android:typeface="serif"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/spacing_normal"
                   />
            <com.icom.gosutv.ui.customview.SettingsToggle
                    xmlns:widget="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/setting_screen_toggleButtonDota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    widget:prefName="Dota"
                    />
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/setting_fragment_rlFilterLol"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/spacing_mini"
                android:clickable="false">
            <TextView
                    android:id="@+id/setting_fragment_tvFilterLol"
                    style="@style/TextStyleSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lol"
                    android:textSize="@dimen/text_size_small"
                    android:layout_centerVertical="true"
                    android:typeface="serif"
                    android:layout_marginLeft="@dimen/spacing_normal"/>
            <com.icom.gosutv.ui.customview.SettingsToggle
                    xmlns:widget="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/setting_screen_toggleButtonLol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    widget:prefName="Lol"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical"
            >
        <TextView
                android:text="GIỚI THIỆU"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/text_size_smaller"
                android:textStyle="bold"
                android:textColor="#4baac8"
                android:typeface="normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_small"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#4baac8"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <TextView
                    android:text="App Version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"/>
            <ImageView
                    style="@style/LineHorizontal"
                    android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <TextView
                    android:text="Trợ giúp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"/>
            <ImageView
                    style="@style/LineHorizontal"
                    android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <TextView
                    android:text="Facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"/>

            <ImageView
                    style="@style/LineHorizontal"
                    android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <ImageView
                    style="@style/LineHorizontal"
                    android:layout_alignParentBottom="true"/>
        </RelativeLayout>
