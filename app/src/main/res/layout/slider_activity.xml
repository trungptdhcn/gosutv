<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                tools:context="com.icom.gosutv.ui.fragment.SilderActivity">

    <android.support.v4.view.ViewPager
            android:id="@+id/gallery_activity_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    <RelativeLayout
            android:id="@+id/slide_pager_item_llActionBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:background="@color/black_transparent"
            android:orientation="vertical"
            android:visibility="gone"
            >
        <ImageView
                android:id="@+id/slider_activity_ivMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:alpha="0.5"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share"
                android:layout_centerVertical="true"
                android:alpha="0.5"
                android:layout_toLeftOf="@+id/slider_activity_ivMore"
                android:layout_marginRight="@dimen/spacing_small"/>

    </RelativeLayout>
    <LinearLayout
            android:id="@+id/slide_pager_item_llLikeAndComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/spacing_mini"
            android:layout_marginLeft="@dimen/spacing_mini">
        <TextView
                android:id="@+id/slide_pager_item_tvAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/pencil_white_mini"
                android:drawablePadding="3dp"
                android:textSize="@dimen/text_size_mini"
                android:textColor="@color/white"/>
        <TextView
                android:id="@+id/slide_pager_item_tvView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/eye_white_mini"
                android:textSize="@dimen/text_size_mini"
                android:drawablePadding="3dp"
                android:layout_marginLeft="@dimen/spacing_normal"/>
    </LinearLayout>
</RelativeLayout>
