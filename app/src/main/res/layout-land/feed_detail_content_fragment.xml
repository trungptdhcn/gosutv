<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res"
                xmlns:wheel="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/feed_detail_content_fragment_rlContainer">
    <RelativeLayout
            android:id="@+id/feed_detail_content_fragment_rlActionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/spacing_big_size"
            android:layout_alignParentTop="true">
        <ImageView
                android:id="@+id/feed_detail_content_fragment_ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_arrow"
                />
    </RelativeLayout>
    <!--<TextView-->
    <!--android:id="@+id/feed_detail_fragment_tvTitle"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginBottom="@dimen/spacing_normal"-->
    <!--android:layout_marginTop="@dimen/spacing_normal"-->
    <!--android:textColor="@color/black"-->
    <!--android:textSize="@dimen/text_size_smaller"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:visibility="gone"/>-->
    <WebView
            android:id="@+id/feed_detail_fragment_tvDes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/text_size_small"
            android:layout_marginLeft="@dimen/spacing_mini"
            android:layout_marginRight="@dimen/spacing_mini"
            android:gravity="left"
            android:layout_centerVertical="true"
            android:text="Đi solo mid với Sniper, combat cùng đồng đội và lao vào cả nhà đối thủ đặt mìn...đó là Techies của Miracle. Chơi được rất nhiều hero khác nhau cùng phong cách không đụng hàng, chàng trai này đang cho chúng ta thấy đẳng cấp của một game thủ như nào khi ở 8K MMR."
            android:textColor="@color/material_blue_grey_700"
            android:textSize="@dimen/text_size_small"
            android:layout_below="@+id/feed_detail_fragment_tvTitle"
            android:visibility="gone"/>
    <RelativeLayout
            android:id="@+id/video_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:gravity="center_horizontal|center_vertical"
            android:layout_below="@+id/feed_detail_fragment_tvTitle">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <FrameLayout
                    android:id="@+id/videoSurfaceContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                <SurfaceView
                        android:id="@+id/videoSurface"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </FrameLayout>
            <ImageView
                    android:id="@+id/feed_detail_content_fragment_ivThumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            <ImageView
                    android:id="@+id/feed_detail_content_fragment_ivPlayer"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/play_thumbnail"/>
            <ProgressBar
                    android:id="@+id/feed_detail_content_fragment_ivProgressBar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:src="@drawable/play_thumbnail"/>
        </RelativeLayout>
        <com.google.android.youtube.player.YouTubePlayerView
                android:id="@+id/feed_detail_content_fragment_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                />
        <RelativeLayout
                android:id="@+id/feed_detail_content_fragment_rlGallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >
            <android.support.v4.view.ViewPager
                    android:id="@+id/feed_detail_content_fragment_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/arrow_right"
                    android:alpha="0.5"
                    />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/arrow_left"
                    android:alpha="0.5"
                    />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
            android:id="@+id/feed_detail_content_fragment_llRelated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/video_container"
            android:visibility="gone"
            android:layout_marginTop="2dp"
            android:orientation="vertical">
        <ListView
                android:id="@+id/feed_detail_content_fragment_lvRelated"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
    </LinearLayout>
    <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/feed_detail_content_fragment_progress_bar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            wheel:matProg_barColor="@color/main_color_500"
            wheel:matProg_progressIndeterminate="true"
            />
</RelativeLayout>